generator client { provider = "prisma-client-js" }
datasource db { provider = "postgresql" url = env("DATABASE_URL") }
model Tenant { id String @id @default(cuid()) name String projects Project[] createdAt DateTime @default(now()) }
model Project { id String @id @default(cuid()) name String slug String @unique description String? spec Json? tenant Tenant @relation(fields: [tenantId], references: [id]) tenantId String createdAt DateTime @default(now()) updatedAt DateTime @updatedAt @@index([tenantId]) }
model AuditLog { id String @id @default(cuid()) action String metadata Json? userId String? tenantId String createdAt DateTime @default(now()) @@index([tenantId]) }
